<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    >

    <ImageButton
        android:id="@+id/btnGetPicture"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="292dp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:onClick="albumClick"
        android:scaleType="fitXY"
        android:src="@drawable/loadPic_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/btnTakePicture"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/cam_btn"
        app:layout_constraintBottom_toTopOf="@+id/btnGetPicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/diaryButton"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="186dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="diaryClick"
        android:scaleType="fitXY"
        android:src="@drawable/diary_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:layout_marginBottom="193dp"
        android:scaleType="fitCenter"
        android:src="@drawable/main_title"
        app:layout_constraintBottom_toTopOf="@+id/diaryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/main_title" />


</android.support.constraint.ConstraintLayout>